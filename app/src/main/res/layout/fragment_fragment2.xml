<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Fragments.Fragment2">

    <!-- TODO: Update blank fragment layout -->
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <AutoCompleteTextView
            android:id="@+id/usersAdress"
            android:layout_marginTop="20dp"
            android:inputType="textMultiLine"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:hint="Arızayı yaşadığınız adresinizi yazınız."
            android:background="@drawable/rounded_white"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="15dp"
            android:textSize="14sp"
            android:drawablePadding="5dp"
            android:paddingLeft="20dp"
            android:paddingBottom="10dp"
            android:paddingTop="10dp"
            android:layout_marginBottom="0dp"
            android:drawableStart="@drawable/ic_home_black_24dp"
            android:paddingRight="10dp"/>

        <AutoCompleteTextView
            android:id="@+id/usersPhone"
            android:layout_marginTop="20dp"
            android:inputType="phone"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:hint="Telefon numaranız"
            android:background="@drawable/rounded_white"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="15dp"
            android:textSize="14sp"
            android:drawablePadding="5dp"
            android:paddingLeft="20dp"
            android:paddingBottom="10dp"
            android:paddingTop="10dp"
            android:layout_marginBottom="10dp"
            android:drawableStart="@drawable/ic_phone_android_black_24dp"
            android:paddingRight="10dp"/>



    </LinearLayout>

</FrameLayout>